{% extends 'base.html.twig' %}

{% block title %}UserFilm index{% endblock %}

{% block body %}
    <h1>UserFilm index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateAjout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_film in user_films %}
            <tr>
                <td>{{ user_film.id }}</td>
                <td>{{ user_film.dateAjout ? user_film.dateAjout|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_film_show', {'id': user_film.id}) }}">show</a>
                    <a href="{{ path('app_user_film_edit', {'id': user_film.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_film_new') }}">Create new</a>
{% endblock %}
